pipeline {
    agent any

    tools {
        maven "maven3"
    }

    environment { 
        NEXUS_URL = '13.215.120.233:8081'
        NEXUS_REPO = 'java-project'
        NEXUS_CREDENTIALS_ID = 'nexus-credentials'
        ARTIFACT_VERSION = "${BUILD_NUMBER}"
        DOCKER_IMAGE = "manisha/java-project:${BUILD_NUMBER}"
    }
    
    stages {
        stage('Clean Workspace') {
            steps {
                echo "Cleaning workspace..."
                cleanWs()
            }
        }

        stage('Git Checkout') {
            steps {
                echo "Checking out code from Git..."
                git branch: 'main', url: 'https://github.com/manishasasi/java-project.git'
            }
        }

        stage('Build & Test') {
            steps {
                echo 'Running unit tests...'
                sh 'mvn test'
            }
        }

        stage('Package & Install') {
            steps {
                echo 'Packaging the project...'
                sh '''
                   mvn package
                   mvn install
                '''
            }
        }

        stage('Uploading to Nexus') {
            steps {
                echo 'Uploading artifact to Nexus repository...'
                nexusArtifactUploader artifacts: [
                    [
                        artifactId: 'SimpleJavaProject',
                        classifier: '',
                        file: 'target/SimpleJavaProject-1.0.jar',
                        type: 'jar'
                    ]
                ],
                credentialsId: "${env.NEXUS_CREDENTIALS_ID}",
                groupId: 'com.manisha',
                nexusUrl: "${env.NEXUS_URL}",
                nexusVersion: 'nexus3',
                protocol: 'http',
                repository: "${env.NEXUS_REPO}",
                version: "${env.ARTIFACT_VERSION}"
            }
        }
        stage('Check Docker Access') {
            steps {
                sh 'docker info'
            }
        }

        stage('Build Docker Image') {
            steps {
                echo 'Building Docker image...'
                sh """
                echo "User: \$(whoami)"
                id
                groups

                docker build -t ${DOCKER_IMAGE} .
                """
            }
    
        }
		stage('Scan Docker Image') {
			    steps {
			        echo 'Scanning Docker image using Trivy...'
			        sh '''
			            # Run Trivy against the built image
			            trivy image --severity HIGH,CRITICAL --exit-code 1 ${DOCKER_IMAGE} > trivyimage.txt
			        '''
   		 }
	    post {
	        always {
	            // Archive the report so you can view/download it in Jenkins
	            archiveArtifacts artifacts: 'trivyimage.txt', fingerprint: true
	        }
	    }
	}

    }
    
    post {
        success {
            echo 'Build completed successfully!'
        }
        failure {
            echo 'Build failed. Check logs.'
        }
    }
}
