pipeline {
    agent any

    tools {
        git "Default"
        maven "maven3"
    }

    environment { 
        NEXUS_URL = '18.141.170.99:8081'
        NEXUS_REPO = 'java-project'
        NEXUS_CREDENTIALS_ID = 'nexus-credentials'
        ARTIFACT_VERSION = "${BUILD_NUMBER}"
        DOCKER_IMAGE = "manishasasi5/java-project:${BUILD_NUMBER}"
    }
    
    stages {
        stage('Clean Workspace') {
            steps {
                echo "Cleaning workspace..."
                cleanWs()
            }
        }

        stage('Git Checkout') {
    steps {
        dir("${WORKSPACE}") {
            git branch: 'main',
                url: 'https://github.com/manishasasi/java-project.git',
                credentialsId: 'git1'
        }
        sh 'git checkout -B main origin/main'
    }
}

        stage('Build & Test') {
            steps {
                echo 'Building the project...'
                sh '''
                   cd java-project
                   mvn clean compile
                   mvn test
                '''
            }
        }

        stage('Package & Install') {
            steps {
                echo 'Packaging the project...'
                sh '''
                   cd java-project
                   mvn package
                   mvn install
                '''
            }
        }

        stage('Uploading to Nexus') {
            steps {
                echo 'Uploading artifact to Nexus repository...'
                nexusArtifactUploader artifacts: [
                    [
                        artifactId: 'SimpleJavaProject',
                        classifier: '',
                        file: 'java-project/target/SimpleJavaProject-1.0.jar',
                        type: 'jar'
                    ]
                ],
                credentialsId: "${env.NEXUS_CREDENTIALS_ID}",
                groupId: 'com.manisha',
                nexusUrl: "${env.NEXUS_URL}",
                nexusVersion: 'nexus3',
                protocol: 'http',
                repository: "${env.NEXUS_REPO}",
                version: "${env.ARTIFACT_VERSION}"
            }
        }

        stage('Check Docker Access') {
            steps {
                sh 'docker info'
            }
        }

        stage('Build Docker Image') {
            steps {
                echo 'Building Docker image...'
                sh '''
                   echo "User: $(whoami)"
                   id
                   groups

                   cd java-project
                   docker build -t $DOCKER_IMAGE .
                '''
            }
        }

        stage('Scan Docker Image') {
            steps {
                echo 'Scanning Docker image using Trivy...'
                sh '''
                    trivy image --severity HIGH,CRITICAL --exit-code 1 $DOCKER_IMAGE > trivyimage.txt
                '''
            }
            post {
                always {
                    archiveArtifacts artifacts: 'trivyimage.txt', fingerprint: true
                }
            }
        }

        stage('Push Image') {
            steps {
                echo 'Pushing Docker image to registry...'
                withCredentials([usernamePassword(credentialsId: 'docker-cred',
                                                  usernameVariable: 'DOCKER_USER',
                                                  passwordVariable: 'DOCKER_PASS')]) {
                    sh '''
                        echo $DOCKER_PASS | docker login -u $DOCKER_USER --password-stdin
                        docker push $DOCKER_IMAGE
                    '''
                }
            }
        }

        stage('Cleanup Trivy Cache') {
            steps {
                echo 'Cleaning up Trivy cache...'
                sh 'trivy clean --cache || true'
            }                                                        
        }
        
        stage('Update Deployment File') {
    environment {
        GIT_REPO_NAME = "java-project"
        GIT_USER_NAME = "manishasasi"
    }
    steps {
        withCredentials([usernamePassword(credentialsId: 'git1',
                                          usernameVariable: 'GIT_USER',
                                          passwordVariable: 'GIT_TOKEN')]) {
            sh '''
                echo "Update Deployment File..."
                cd "$WORKSPACE"
                git config user.email "manishaasha5@gmail.com"
                git config user.name "manishasasi"

                PREVIOUS_BUILD_NUMBER=$((BUILD_NUMBER - 1))
                sed -i "s|manishasasi5/java-project:${PREVIOUS_BUILD_NUMBER}|manishasasi5/java-project:${BUILD_NUMBER}|g" java-project-manifests/deployment.yml

                git remote set-url origin https://$GIT_USER:$GIT_TOKEN@github.com/$GIT_USER_NAME/$GIT_REPO_NAME.git
                git checkout -B main origin/main
                git pull origin main
                git add .
                git commit -m "Update deployment image to version $BUILD_NUMBER" || echo "No changes to commit"
                git push origin main
            '''
        }
    }
}


        stage('Remove Local Docker Image') {
            steps {
                echo 'Removing Docker image from local...'
                sh '''
                   docker rmi $DOCKER_IMAGE || true
                '''
            }
        }
    }
    
    post {
        success {
            echo 'Build completed successfully!'
        }
        failure {
            echo 'Build failed. Check logs.'
        }
    }
}
